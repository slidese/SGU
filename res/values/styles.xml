<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    

    <style name="header_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/card_header_button_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/see_more</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@color/header_button_default</item>
        <item name="android:layout_marginLeft">@dimen/card_header_button_margin_left</item>
        <item name="android:paddingLeft">@dimen/card_header_button_padding_side</item>
        <item name="android:paddingRight">@dimen/card_header_button_padding_side</item>
        <item name="android:paddingTop">@dimen/card_header_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_header_button_padding_top</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">@dimen/card_header_padding_top</item>
    </style>

    <style name="card_popup_anchor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/card_menu_button</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="card_shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_shadow</item>
        <item name="android:src">@drawable/card_shadow</item>
        <item name="android:layout_below">@+id/inner_frame</item>
    </style>

    <style name="card_outer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/card_outer_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_outer_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_outer_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_outer_padding_horizontal</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>
    
    <style name="card_outer_details">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/card_outer_padding_top_details</item>
        <item name="android:paddingBottom">@dimen/card_outer_padding_bottom_details</item>
        <item name="android:paddingLeft">@dimen/card_outer_padding_horizontal_details</item>
        <item name="android:paddingRight">@dimen/card_outer_padding_horizontal_details</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:background">@color/card_listview_background</item>
    </style>

    <style name="card_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- item name="android:paddingLeft">@dimen/card_inner_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/card_inner_padding_vertical</item-->
        <item name="android:background">@drawable/card_selector</item>
        <item name="android:duplicateParentState">true</item>
    </style>
    
    <style name="card_inner_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/card_inner_padding_vertical</item>
        <item name="android:background">@drawable/card_selector</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="card_thumbnail">
        <item name="android:layout_width">@dimen/card_thumbnail</item>
        <item name="android:layout_height">@dimen/card_thumbnail</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">@dimen/card_thumbnail_margin</item>
    </style>

    <style name="card_title_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_left</item>
        <item name="android:layout_toRightOf">@android:id/icon</item>
        
        <item name="android:paddingLeft">@dimen/card_inner_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/card_inner_padding_vertical</item>
    </style>

    <style name="card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_toLeftOf">@android:id/button1</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="card_title_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_toLeftOf">@android:id/button1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
    </style>
    
    <style name="card_length">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_length</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/holo_blue_dark</item>
    </style>
    
    <style name="card_mb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">@dimen/card_length</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/mb</item>
        <item name="android:textColor">@color/holo_blue_dark</item>
    </style>

    <style name="card_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_content</item>
        <item name="android:layout_below">@+id/titleFrame</item>
        <item name="android:layout_toRightOf">@android:id/icon</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_left</item>
        
        <item name="android:paddingLeft">@dimen/card_inner_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <style name="card_content_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_content</item>
        <item name="android:layout_below">@+id/titleFrame</item>
        <item name="android:layout_toRightOf">@android:id/icon</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_left_details</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding_left_details</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right_details</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical_details</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="card_quote_text" parent="@style/card_content_details">
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="card_quote_by" parent="@style/card_content_details">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/card_quote_by</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/card_quote_by_padding_right</item>
    </style>

    <style name="card_header_outer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/card_header_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_header_padding_horizontal</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:background">@drawable/card_header_selector</item>
    </style>

    <style name="card_header_inner">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_toLeftOf">@android:id/button1</item>
        <item name="android:layout_marginTop">@dimen/card_header_padding_top</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="card_header_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_header</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="card_header_summary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_subheader</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="card_button" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- For normal spinners, i.e. not ActionBar dropdown menues -->
    <style name="spinner">
    	<item name="android:textColor">@color/text_white_dark</item>
	</style>

	<!-- FadingActionBar -->
    <style name="Widget" />
    
    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />
    
    <style name="Widget.Light" />
    
    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
